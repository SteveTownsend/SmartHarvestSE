{
  "$comment": "Definitions are allowed for up to 128 rulesets for Collections",
  "$schema": "./SHSE.SchemaCollections.json",
  "groupPolicy": {
    "action": "take",
    "notify": true,
    "repeat": true
  },
  "useMCM": true,
  "collections": [
    {
      "name": "AHSE Animal Parts",
      "description": "Animal Parts Collection per AutoHarvest SE",
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "keyword": [ "VendorItemAnimalPart" ]
        }
      }
    },

    {
      "name": "Daedric Wielder",
      "description": "Every Daedric Artifact",
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "signature": [ "ARMO", "BOOK", "MISC", "SLGM", "WEAP" ],
          "keyword": [ "VendorItemDaedricArtifact" ]
        }
      }
    },

    {
      "name": "Baggage Handler",
      "description": "Every Pouch and Carrier",
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "signature": [ "ARMO" ],
          "keyword": [ "WAF_ClothingPouch" ]
        }
      }
    },

    {
      "name": "Witch's Brew",
      "description": "Every Ingredient in the game",
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "signature": [ "INGR" ]
        }
      }
    },

    {
      "name": "Regular Weapons",
      "policy": {
        "action": "take",
        "notify": false,
        "repeat": false
      },
      "description": "Unenchanted weapons looted once for curiosity",
      "category": [ "weapon" ]
    },

    {
      "name": "Enchanted Weapons",
      "policy": {
        "action": "take",
        "notify": false,
        "repeat": true
      },
      "description": "Enchanted weapons looted always",
      "category": [ "enchantedWeapon" ]
    },

    {
      "name": "Glow All Unread Books",
      "policy": {
        "action": "glow",
        "notify": false,
        "repeat": true
      },
      "description": "Glow unread books of all stripes",
      "category": [ "book", "skillbook", "spellbook" ]
    },

    {
      "name": "Dwemer Boat Anchors",
      "description": "Misc Dwemer Clutter",
      "policy": {
        "action": "leave",
        "notify": false,
        "repeat": true
      },
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "forms": [
            {
              "plugin": "Skyrim.esm",
              "form": [ "000aebf1", "000c8861", "000c8868", "000c886e", "000c886a", "000c8870", "000c886c", "000c8878", "000c8864", "000c8872", "000c8866", "000c8874" ]
            }
          ]
        }
      }
    },

    {
      "name": "Dwemer Boat Anchors (Named)",
      "description": "Misc Dwemer Clutter by name",
      "policy": {
        "action": "leave",
        "notify": false,
        "repeat": true
      },
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "subFilter": [
            {
              "operator": "AND",
              "condition": {
                "nameMatch": {
                  "isNPC": false,
                  "matchIf": "startsWith",
                  "names": [ "Dwemer" ]
                }
              }
            },
            {
              "operator": "AND",
              "condition": {
                "nameMatch": {
                  "isNPC": false,
                  "matchIf": "contains",
                  "names": [ "Metal", "Strut", "Lever", "Cog", "Gear", "Gyro" ]
                }
              }
            },
            {
              "operator": "AND",
              "condition": {
                "nameMatch": {
                  "isNPC": false,
                  "matchIf": "omits",
                  "names": [ "Handle" ]
                }
              }
            }
          ]
        }
      }
    },

    {
      "name": "Dragon It Out",
      "description": "Grab Dragon Bones and Scales",
      "policy": {
        "action": "take",
        "notify": true,
        "repeat": true
      },
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "forms": [
            {
              "plugin": "Skyrim.esm",
              "form": [ "0003ada4", "000d0756", "0003ada3" ]
            }
          ]
        }
      }
    },
    {
      "$comment": "Exclude harvestable Salmon",
      "name": "Raw Salmon, Eww",
      "description": "Do not loot Raw Salmon",
      "policy": {
        "action": "leave",
        "notify": false,
        "repeat": true
      },
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "nameMatch": {
            "isNPC": false,
            "matchIf": "equals",
            "names": [ "Salmon", "Raw Salmon Fillet" ]
          }
        }
      }
    },
    {
      "$comment": "Allow loot of processed Salmon (inverts Raw Salmon, Eww)",
      "name": "Cooked Salmon, Yum",
      "description": "Allow loot of processed Salmon",
      "policy": {
        "action": "take",
        "notify": false,
        "repeat": true
      },
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "subFilter": [
            {
              "operator": "AND",
              "condition": {
                "nameMatch": {
                  "isNPC": false,
                  "matchIf": "contains",
                  "names": [ "Salmon" ]
                }
              }
            },
            {
              "operator": "AND",
              "condition": {
                "nameMatch": {
                  "isNPC": false,
                  "matchIf": "notEquals",
                  "names": [ "Raw Salmon Fillet", "Salmon" ]
                }
              }
            }
          ]
        }
      }
    },
    {
      "$comment": "Prohibit loot of Staves",
      "name": "Wood Allergy, But Only Magic Wood",
      "description": "Do not loot Staves, they give me a rash",
      "policy": {
        "action": "leave",
        "notify": false,
        "repeat": true
      },
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "signature": [ "WEAP" ],
          "nameMatch": {
            "isNPC": false,
            "matchIf": "contains",
            "names": [ "Staff " ]
          }
        }
      }
    },
    {
      "$comment": "Auto-collect bugs in a jar",
      "name": "Don't Bottle It Up",
      "description": "Bugs in a Jar are easy to miss, so don't",
      "policy": {
        "action": "take",
        "notify": true,
        "repeat": true
      },
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "signature": [ "MISC" ],
          "nameMatch": {
            "isNPC": false,
            "matchIf": "contains",
            "names": [ "in a Jar" ]
          }
        }
      }
    },
    {
      "$comment": "Test named NPC loot prevention",
      "name": "Arachnophobia",
      "description": "Do not loot spiders, they are too creepy to touch",
      "policy": {
        "action": "leave",
        "notify": false,
        "repeat": true
      },
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "nameMatch": {
            "isNPC": true,
            "matchIf": "contains",
            "names": [ "Spider" ]
          }
        }
      }
    },
    {
      "$comment": "Leave behind OBIS facemasks",
      "name": "Facemasks",
      "description": "",
      "rootFilter": {
        "operator": "AND",
        "condition": {
          "plugin": [ "OBIS SE.esp" ],
          "signature": [ "ARMO" ],
          "nameMatch": {
            "isNPC": false,
            "matchIf": "startsWith",
            "names": [ "Face" ]
          }
        }
      }
    }
  ]
}
